<Page x:Class="大作业.Pages.PageMessageBox"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:大作业.Pages"
      xmlns:z="wpfz"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="600"
      Title="PageMessageBox">

    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
        <z:Buttonz Iconz="{z:F Icon=e086_实心i号}" Margin="10 2 0 2" Padding="10,0,0,0" CornerRadius="16,0,0,16" AllowsAnimation="True" Click="FButton_Click_Info">Info</z:Buttonz>
        <z:Buttonz Iconz="{z:F Icon=e085_实心问号}" Margin="0 2" CornerRadius="0" Click="FButton_Click_Question">Question</z:Buttonz>
        <z:Buttonz Iconz="{z:F Icon=e101_实心叹号_检查}" Margin="0 2" CornerRadius="0" Click="FButton_Click_Warning">Warining</z:Buttonz>
        <z:Buttonz Iconz="{z:F Icon=e107_三角叹号_警告}" Margin="0 2" Padding="0,0,10,0" CornerRadius="0,16,16,0" AllowsAnimation="True" Click="FButton_Click_Error">Error</z:Buttonz>
    </StackPanel>
</Page>
