        <Setter Property="BorderThickness" Value="0,0,0,3" />
        <Setter Property="BorderBrush" Value="{DynamicResource HeaderBorderBrush_Colors}" />
        <Setter Property="Background" Value="{DynamicResource HeaderBackground_Colors}" />
