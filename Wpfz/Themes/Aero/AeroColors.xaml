    <!--Menu-->
    <SolidColorBrush x:Key="MenuForeground_Colors" Color="Black"/>
    <SolidColorBrush x:Key="MenuBackground_Colors" Color="#51A1C4"/>
    <SolidColorBrush x:Key="MenuBorderBrush_Colors" Color="Gray"/>
    <SolidColorBrush x:Key="MenuMouseOverBackground_Colors" Color="#bfe2ca"/>
    <SolidColorBrush x:Key="MenuMouseOverForeground_Colors" Color="Black"/>
    <SolidColorBrush x:Key="MenuPressedBackground_Colors" Color="#fc9b7a"/>
    <SolidColorBrush x:Key="MenuPressedForeground_Colors" Color="Black"/>

    <!--State brush，这两个定义都未被引用过-->
    <SolidColorBrush x:Key="SuccessBrush_Colors" Color="#16B32A"/>
    <SolidColorBrush x:Key="FailBrush_Colors" Color="#B92222"/>

</ResourceDictionary>