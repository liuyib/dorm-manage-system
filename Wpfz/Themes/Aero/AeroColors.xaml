                <GradientStop Color="#FFe3e9ef" Offset="1" />
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ControlMouseOverBorder_ColorsKey" StartPoint="0.5,0" EndPoint="0.5,1">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="#FF3d7bad" Offset="0" />
                <GradientStop Color="#FFa4c9e3" Offset="0.05" />
                <GradientStop Color="#FFa4c9e3" Offset="0.95" />
                <GradientStop Color="#FFb7d9ed" Offset="1" />
            </GradientStopCollection>
        </LinearGradientBrush.GradientStops>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ControlFocusedBorder_ColorsKey" 
       StartPoint="0.5,0" EndPoint="0.5,1">
        <LinearGradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="#FF3d7bad" Offset="0" />
                <GradientStop Color="#FFa4c9e3" Offset="0.05" />
